---
import Tags from "@/components/Tags";

const { displayTags, pageTitle } = Astro.props as {
  displayTags: string[];
  pageTitle: string;
};
---
<nav id="tag-nav" class="mt-3 mb-6 px-4 overflow-x-auto scrollbar-hide snap-x snap-mandatory">
  <ul class="grid grid-flow-col auto-cols-max gap-2">
    {displayTags.map((t) => (
      <li class="shrink-0 snap-start">
        <Tags tag={t} pageTitle={pageTitle} />
      </li>
    ))}
  </ul>
</nav>

<script is:inline>
  (function () {
    const nav = document.getElementById('tag-nav');
    if (!nav) return;
    const active = nav.querySelector('[data-active="true"]');
    if (!active) return;

    active.scrollIntoView({ behavior: 'smooth', inline: 'center', block: 'nearest' });
  })();
</script>