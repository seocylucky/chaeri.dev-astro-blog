---
import Header from '../components/Header.astro';
import Footer from '../components/Footer';
import CustomSparkleCursor from '../components/CustomSparkCursor';
import '../styles/global.css';

const { pageTitle } = Astro.props as {
  pageTitle?: string;
};
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <CustomSparkleCursor client:load color="random" count={50} hideNativeCursor={false} />
    <Header />

    {pageTitle && <div class="flex justify-center items-center text-4xl">{pageTitle}</div>}

    <main class="mx-auto max-w-6xl">
      <slot />
    </main>

    <Footer />
    <script type="module" src="/scripts/menu.js"></script>
  </body>
</html>
